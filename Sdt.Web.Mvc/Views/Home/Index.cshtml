    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="jumbotron">
        <h5 class="text-center">Spruch des Tages</h5>
        <p class="text-center">
            @*@if (!string.IsNullOrEmpty(Model.AutorBildType))
            {
                <img width="120" src="data:@Model.AutorBildType;base64,@Convert.ToBase64String(Model.AutorBild)" />
            }
            else
            {
                <img width="120" src="~/images/noimg.jpg" />
            }*@
