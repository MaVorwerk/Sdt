            <small>
                <span>@Model.AutorName</span> - <span>@Model.AutorBeschreibung</span>
                <br />
                <span>
                    @if (Model.AutorGeburtsdatum.HasValue)
                    {
                        @Model.AutorGeburtsdatum.Value.ToShortDateString()
