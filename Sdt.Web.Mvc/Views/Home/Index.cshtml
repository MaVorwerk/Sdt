            <imagedataurl image-mime-type="@Model.AutorBildType" image="@Model.AutorBild" width="150" alt-src="https://via.placeholder.com/150"></imagedataurl>
        </p>
        <blockquote class="text-center">
            <cite class="lead">@Model.SpruchText</cite>
